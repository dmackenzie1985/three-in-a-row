            </intent-filter>
        </activity>
        <activity
            android:name=".Game"
            android:label="@string/title_activity_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Help"
            android:label="@string/title_activity_help"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Highscores"
            android:label="@string/title_activity_highscores"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
